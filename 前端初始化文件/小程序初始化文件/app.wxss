/**app.wxss**/
/* 字体图标 */
@font-face {
  font-family: 'iconfont';  /* project id 905039 */
  src: url('//at.alicdn.com/t/font_905039_0muenmbo9lsd.eot');
  src: url('//at.alicdn.com/t/font_905039_0muenmbo9lsd.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_905039_0muenmbo9lsd.woff') format('woff'),
  url('//at.alicdn.com/t/font_905039_0muenmbo9lsd.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_905039_0muenmbo9lsd.svg#iconfont') format('svg');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 50rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
  vertical-align: middle
}
.icon-tel::before{content: "\e694";}
/* 对整体页面的page重置样式 */
page{font-size: 28rpx;line-height: 1.8;}
/* 文字常用颜色 */
.color-gray{color:#666;}
.color-lightgray{color:#999;}
.color-red{color:#a40000}
/* 背景颜色 */
.bg-white{background: #fff}
.bg-red{background:red}
/* 文字常用字号 */
.big-text{font-size: 55rpx;}
.largest-text{font-size: 40rpx;}
.large-text{font-size: 30rpx}
.normal-text{font-size: 28rpx;}
.mini-text{font-size: 24rpx;}
.strong-text{font-weight: bold;}
/*删除线*/
.text-delete{text-decoration:line-through}
/* 对齐方式 */
.tl{text-align: left}
.tc{text-align: center}
.tr{text-align: right}
/* 弹性盒子*/
.db{display: block}
.dib{display: inline-block}
.fbox{display: flex;}
.fbox_column{flex-direction: column}
.fg1,.fg2,.fg3,.fg4,.fg5,.fg6,.fg7,.fg8,.fg9{width:1px}
.fg1{flex-grow:1}
.fg2{flex-grow:2}
.fg3{flex-grow:3}
.fg4{flex-grow:4}
.fg5{flex-grow:5}
.fg6{flex-grow:6}
.fg7{flex-grow:7}
.fg8{flex-grow:8}
.fg9{flex-grow:9}
.fbox-acenter{align-items:center;}
.fbox-jcenter{justify-content:center;}
.fbox-jbetween{justify-content:space-between;}
.fbox-r{justify-content: flex-end}
/* 文字溢出隐藏 */
.ell{overflow:hidden;word-wrap:normal;white-space:nowrap;text-overflow:ellipsis;}
.ell_1{ overflow: hidden; display: -webkit-box; -webkit-line-clamp: 1;-webkit-box-orient: vertical;}
.ell_2{ overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2;-webkit-box-orient: vertical;}
/*常用间距*/
.pad20{padding: 20rpx;}
.pad-lr{padding:0 20rpx;} 
.mr{margin-right: 20rpx;}
.ml{margin-left: 20rpx;}
.mb{margin-bottom: 20rpx;}
.mt{margin-top: 20rpx;}
.pt{padding-top: 20rpx;}
.pb{padding-bottom: 20rpx;}
.mb-list{margin-bottom: 1px}
.mt-list{margin-top: 1px}
